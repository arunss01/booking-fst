generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ... (Biarkan model User, Room, Schedule, Booking dll tetap ada di bawah sini)
model User {
  id        String   @id @default(cuid())
  nim       String   @unique
  password  String
  name      String
  role      String   @default("STUDENT")
  major     String
  kelas     String
  points    Int      @default(0)
  bookings  Booking[]
}

model Room {
  id        String   @id
  name      String
  floor     Int
  capacity  Int
  type      String
  bookings  Booking[]
  schedules Schedule[]
}

model Schedule {
  id          Int      @id @default(autoincrement())
  mataKuliah  String
  dosen       String
  kelas       String
  major       String
  hari        String
  jamMulai    String
  jamSelesai  String
  sks         Int
  status      String   @default("active")
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id])
  cancellations ClassCancellation[]
}

model ClassCancellation {
  id         String   @id @default(cuid())
  date       String 
  createdAt  DateTime @default(now())
  scheduleId Int
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
}

model Booking {
  id        String   @id @default(cuid())
  bookingId String   @unique
  date      String
  startTime String
  endTime   String
  duration  Int
  status    String   @default("TERKONFIRMASI")
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  roomName  String
  floor     Int
  userName  String
  userMajor String
  userClass String
}