// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Model User
model User {
  id        String   @id @default(cuid())
  nim       String   @unique
  password  String
  name      String
  role      String   @default("STUDENT")
  major     String
  kelas     String
  points    Int      @default(0)
  
  bookings  Booking[]
}

// 2. Model Ruangan
model Room {
  id        String   @id
  name      String
  floor     Int
  capacity  Int
  type      String
  
  bookings  Booking[]
  schedules Schedule[]
}

// 3. Model Jadwal Kuliah
model Schedule {
  id          Int      @id @default(autoincrement())
  mataKuliah  String
  dosen       String
  kelas       String
  major       String
  hari        String
  jamMulai    String
  jamSelesai  String
  sks         Int
  status      String   @default("active")
  
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id])
}

// 4. Model Booking
model Booking {
  id        String   @id @default(cuid())
  bookingId String   @unique
  date      String
  startTime String
  endTime   String
  duration  Int
  status    String   @default("TERKONFIRMASI")
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  
  // Data Snapshot
  roomName  String
  floor     Int
  userName  String
  userMajor String
  userClass String
}